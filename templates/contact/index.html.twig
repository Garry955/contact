{% extends 'base.html.twig' %}

{% block title %}Contact Form
{% endblock %}

{% block body %}
	<div class="wrapper">
		<h1>Contact Form</h1>
		{% if errors is defined %}
			<h3>Hiba! Kérjük töltsd ki az összes mezőt!</h3>
		{% endif %}

		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		{{ form_widget(form) }}
		<button type="submit">Submit</button>
		{{ form_end(form) }}


	</div>
{% endblock %}
