{% extends 'base.html.twig' %}

{% block title %}Kapcsolatfelvétel
{% endblock %}

{% block body %}
	<div class="wrapper">
		<h1 class="mb-5">Kapcsolat felvételi űrlap</h1>
		{% if errors is defined %}
			<h3 class="text-danger mb-4">Hiba! Kérjük helyesen töltsd ki az összes mezőt!</h3>
		{% endif %}

		{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class' : 'mb-3'}}) }}
		{{ form_widget(form) }}
		<button type="submit" class="btn btn-primary mt-3">Elküld</button>
		{{ form_end(form) }}


	</div>
{% endblock %}
